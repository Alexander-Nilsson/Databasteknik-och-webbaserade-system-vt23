<form asp-controller="Image" asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="File">Choose File:</label>
        <input type="file" id="model.File" name="File" required />
    </div>
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" asp-for=Name required />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" id="Description" asp-for=Description />
    </div>
    <div class="form-group">
        <label for="Category">Category:</label>
        <input type="text" id="Category" asp-for=Category />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" id="Price" asp-for=Price required />
    </div>
    <div class="form-group">
        <button type="submit">Upload Image</button>
    </div>
</form>
