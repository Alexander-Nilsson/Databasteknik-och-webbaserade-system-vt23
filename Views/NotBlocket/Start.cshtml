@model NotBlocket2.Models.Graphmethods

@{
    ViewData["Title"] = "Start Page";
}

<div class="text-center">
    <h4 class="display-4">Welcome to NotBlocket</h4>
</div>


<form action="NotBlocket/SearchResults" method="get">
    <div class="form-group">
        <input type="text" class="form-control" name="search" placeholder="Search">
    </div>

    <div class="text-center">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Login">Login</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>

<canvas id="myChart"></canvas>

LocationNames: @ViewBag.LocationNamesString
ProfileCount: @ViewBag.ProfileCount

LocationNameslist:


<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Model.s1,
            datasets: [{
                label: 'Number of profiles',
                data: @Model.s2,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>

