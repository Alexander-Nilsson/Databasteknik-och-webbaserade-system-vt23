@model IEnumerable<NotBlocket2.Models.Profile>

@{
    ViewData["Title"] = "GetPersonWithDataSet";
}

<h1>GetWithDataSet</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>

                <td>
                  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="deleteRow(@item.Id)">Delete</button>
                    <button type="button" id="deleteBtn" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="deleteRow(@item.Id)">Delete</button>

                  <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#editModal" onclick="editRow(@item.Id)">Edit</button>
                </td>
            </tr>
        }
    </tbody>

</table>


<p>    eventuellt felmeddelande:  @ViewBag.error </p>